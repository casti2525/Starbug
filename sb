#!/usr/bin/php -Cq
<?php
	define('SB_CLI', true);
	$status = 0;
	if (file_exists("etc/Host.php")) {
		include("core/cli.php");
		$status = 1;
	}
	$command = array_shift($argv);
	$script = array_shift($argv);
	if (file_exists("script/$script.php")) include("script/$script.php");
	else if ($status) {
		if (function_exists("locate")) {
			$path = end(locate($script.".php", "script"));
		} else {
			$path = end($sb->locator->locate($script.".php", "script"));
		}
	} else $path = "core/app/script/$script.php";
	if (file_exists($path)) include($path);
	$classname = ucwords($script)."Command";
	if (class_exists($classname)) {
		$command = $container->get($classname);
		$command->run($argv);
	}
?>
